{
  "name": "camundaflow-site",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npx tailwindcss -i ./src/styles.css -o ./public/styles.css --watch\" \"npx live-server public --port=3000\"",
    "build": "npx tailwindcss -i ./src/styles.css -o ./public/styles.css --minify",
    "preview": "npm run build && npx live-server public"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "live-server": "^1.2.2",
    "tailwindcss": "^3.4.14"
  }
}
